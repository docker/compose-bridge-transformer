{{ $project := .name }}
{{ range $name, $network := .networks }}
---
#! {{ $name }}-network-policy.yaml
# Generated code, do not edit
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{ $name | safe }}-network-policy
  namespace: {{ $project | safe }}
spec:
  podSelector:
    matchLabels:
      com.docker.compose.network.{{ $name }}: "true"
  policyTypes:
    - Ingress
    - Egress
  ingress:
    - from:
      - podSelector:
          matchLabels:
            com.docker.compose.network.{{ $name }}: "true"
  egress:
    - to:
      - podSelector:
          matchLabels:
            com.docker.compose.network.{{ $name }}: "true"
{{ end }}