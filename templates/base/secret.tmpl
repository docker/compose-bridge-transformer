{{ $project := .name }}
{{ range $name, $secret := .secrets }}
---
#! {{ $name }}-secret.yaml
# Generated code, do not edit
apiVersion: v1
kind: Secret
metadata:
  name: {{ $name }}
  namespace: {{ $project }}
  labels:
    com.docker.compose.project: {{ $project }}
    com.docker.compose.secret: {{ $name }}
data:
  {{ $name }}: {{ $secret.content | base64 }}
type: Opaque
{{ end }}
